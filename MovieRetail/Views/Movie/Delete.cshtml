@using MovieRetail.GenreType
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Movie

@{
    ViewData["Title"] = "Create";
   
}
<br/>
<h1>Create Movie</h1>

<br/>

<div class="row">
    <div class="col md-4">
        <form asp-action="Delete" asp-controller="Movie" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" disabled="disabled"/>
               
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" disabled="disabled"/>
              
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreType>()" class="form-control" disabled="disabled">
                    <option value="">Select Genre</option>
                </select>
            
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" type="number" step="any" class="form-control-number" disabled="disabled"/>
               
            </div>
            <br/>
  
            <div class="form-group">
                <label asp-for="VideoLink">Upload Video:</label>
                <input asp-for="VideoLink" type="url" class="form-control" disabled="disabled"/>
        
            </div>

            <br/>
            <br/>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
